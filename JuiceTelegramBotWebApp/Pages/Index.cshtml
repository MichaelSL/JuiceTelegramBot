@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>Is custom</th>
                <th>Approved</th>
                <th>Added by</th>
                <th>Creation date</th>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Juices.Count; i++)
            {
                @Html.HiddenFor(m => m.Juices[i].Name)
                <tr>
                    <td>@Html.EditorFor(m => m.Juices[i].IsChecked)</td>
                    <td>@Html.DisplayFor(m => m.Juices[i].Name)</td>
                    <td>@Html.DisplayFor(m => m.Juices[i].IsCustom)</td>
                    <td>@Html.DisplayFor(m => m.Juices[i].Approved)</td>
                    <td>@Html.DisplayFor(m => m.Juices[i].UserName)</td>
                    <td>@Html.DisplayFor(m => m.Juices[i].JuiceDateTime)</td>
                </tr>
            }
            <tr>
                <td>
                    <button type="submit" asp-page-handler="approved">Approve selected</button>
                </td>
                <td>
                    <button type="submit" asp-page-handler="delete">Delete selected</button>
                </td>
            </tr>
            <tr><td><div><a asp-page="./Createbeverage">Create a new beverage</a></div></td></tr>
        </tbody>
    </table>
</form>